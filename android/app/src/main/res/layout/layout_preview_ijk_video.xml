<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.videoeditor.downloader.intubeshot.video.ijk.IjkVideoView
        android:id="@+id/player_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="180dp"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/btn_back_start"
            android:layout_marginRight="10dp"
            android:layout_alignTop="@+id/btn_play"
            android:layout_toLeftOf="@+id/btn_play"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_play_back"
            android:layout_gravity="center"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/btn_play"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_button_play"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"/>

        <com.videoeditor.downloader.intubeshot.video.VideoProgressBar
            android:id="@+id/pb_wait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"/>
    </RelativeLayout>

</FrameLayout>