<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="colorOnSecondary">@color/colorWhite</item>
    </style>

    <style name="ToolbarTheme" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="colorOnSecondary">@color/colorWhite</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FMaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/colorWhite</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">17sp</item>
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="materialAlertDialogBodyTextStyle">@style/FMaterialAlertDialog.MaterialComponents.Body.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/FPositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/FNegativeButtonStyle</item>
    </style>

    <style name="FDeleteMaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/colorWhite</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">17sp</item>
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="materialAlertDialogBodyTextStyle">@style/FMaterialAlertDialog.MaterialComponents.Body.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/FDeletePositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/FNegativeButtonStyle</item>
    </style>


    <style name="FDeletePositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="FPositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="FNegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorCancelText</item>
    </style>

    <style name="FMaterialAlertDialog.MaterialComponents.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textColor">@color/colorBodyText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FMaterialToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="colorControlNormal">@color/colorBackArrow</item>
        <item name="actionMenuTextColor">@color/colorBackArrow</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="FProgressBar.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorAccent">@color/colorRed</item>
    </style>

</resources>
